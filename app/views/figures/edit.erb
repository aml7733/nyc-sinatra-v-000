<h1>Edit <%= @figure.name %> Below:</h1>

<form action="/figures/<%=@figure.id%>" method="post">
  <label>Edit Name:</label>
  <input type="text" name="figure[name]" id="figure_name" value="<%=@figure.name%>">
  <br>
  <label>Select titles for your figure:</label>
  <% Title.all.each do |title| %>
    <input type="checkbox" name="figure[title_ids][]" value="<%= title.id %>" id="title_<%= title.id %>" <%='checked' if @figure.titles.include?(title) %>><%= title.name %></input>
  <% end %>
  <br>
  <label>Or, create a new title:</label>
  <br>
  <input type="text" name="title[name]" id="new_title">
  <br>
  <label>Select landmarks for your figure:</label>
  <% Landmark.all.each do |landmark| %>
    <input type="checkbox" name="figure[landmark_ids][]" value="<%= landmark.id %>" id="landmark_<%= landmark.id %>" <%='checked' if @figure.landmarks.include?(landmark) %>><%= landmark.name %></input>
  <% end %>
  <br>
  <label>Or, create a new landmark:</label>
  <input type="text" name="landmark[name]" id="new_landmark">
  <br>
  <input type="submit" name="submit" value="Edit Figure">
</form>
